    <div class="container login-container">
        <div class="row">
            <div class="col-md-4 login-form-1">
                <form action="/login" method="POST" id="loginForm">
                    <h3>LOGIN</h3>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Email *" name="email" id="loginEmail"
                            required />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Your Password *" name="password"
                            id="loginPassword" required />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btnSubmit btn btn-dark" value="Login" />
                    </div>
                    <div class="form-group">
                        <a href="/register" class="btnForgetPwd">Click Here to Register</a><br>
                    </div>
                </form>
            </div>
        </div>
    </div>

